<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gis23.backend.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.gis23.backend.entity.User">
        insert into users(user_id,user_role,username,password,nickname,gender,birthday,phone,email,address)
        values(#{user_id},#{user_role},#{username},#{password},#{nickname},#{gender},#{birthday},#{phone},#{email},#{address})
    </insert>
    <select id="userLogin" parameterType="java.util.Map" resultType="com.gis23.backend.entity.User">
        select *
        from users
        where #{username}=username and #{password}=password and #{user_role}=user_role
    </select>
    <select id="userInfo" parameterType="java.util.Map" resultType="com.gis23.backend.entity.User">
        select *
        from users
        where #{username}=username and #{user_role}=user_role
    </select>
    <select id="findById" parameterType="java.util.Map" resultType="com.gis23.backend.entity.User">
        select *
        from users
        where #{user_id}=user_id
    </select>
    <update id="updatePasswordById" >
        UPDATE users SET
        password = #{password}
        WHERE user_id = #{user_id}
    </update>

</mapper>